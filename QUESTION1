<!DOCTYPE html>
<html>
<body>
<p id="demo"></p>

<script>
var factorial = (n) =>
            {
                let fact = 1;
                if(n==0)
                {
                    return fact ;
                }
                else if(n==1)
                {
                    return fact;
                }
                else
                {
                    for(let i=3;i<=n;i++)
                    {
                        fact=fact*i;
                    }
                    return fact;
                }
                
            }
        document.getElementById("demo").innerHTML = factorial(8);
</script>

</body>
</html>
